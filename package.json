{
  "name": "generator-liferay-fragments",
  "version": "1.8.0-rc2",
  "description": "Yeoman generator for creating and maintaining Liferay Fragment projects",
  "homepage": "https://www.npmjs.com/package/generator-liferay-fragments",
  "author": {
    "name": "Pablo Molina",
    "email": "pablo.molina@liferay.com"
  },
  "main": "generators/cli.js",
  "files": [
    "generators"
  ],
  "keywords": [
    "liferay",
    "yeoman-generator"
  ],
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-angular": "^11.0.0",
    "@commitlint/travis-cli": "^11.0.0",
    "@types/adm-zip": "^0.4.33",
    "@types/express": "4.17.0",
    "@types/glob": "7.1.1",
    "@types/jest": "24.0.15",
    "@types/jszip": "3.1.6",
    "@types/mime-types": "^2.1.0",
    "@types/mkdirp": "0.5.1",
    "@types/ncp": "^2.0.4",
    "@types/node": "8.10.49",
    "@types/request": "2.48.1",
    "@types/rimraf": "^3.0.0",
    "@types/semver": "^7.1.0",
    "@types/tmp": "0.1.0",
    "@types/voca": "1.4.0",
    "@types/ws": "6.0.1",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "adm-zip": "^0.4.14",
    "copyfiles": "^2.3.0",
    "eslint": "^7.9.0",
    "eslint-config-liferay": "^21.1.0",
    "execa": "^4.0.3",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "8.2.1",
    "prettier": "^2.1.2",
    "tmp": "0.1.0",
    "ts-jest": "^26.4.0",
    "typescript": "^4.0.3",
    "yeoman-assert": "3.1.1",
    "yeoman-test": "2.0.0"
  },
  "engines": {
    "node": ">= 10.0.0",
    "npm": ">= 6.0.0"
  },
  "dependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@liferay/npm-bundler": "3.0.1-pre.0",
    "babel-loader": "^8.1.0",
    "chalk": "2.4.2",
    "chokidar": "3.0.1",
    "express": "4.17.1",
    "form-data": "3.0.0",
    "glob": "7.1.1",
    "jszip": "3.1.5",
    "mime-types": "2.1.26",
    "mkdirp": "0.5.1",
    "ncp": "^2.0.0",
    "request": "2.88.0",
    "rimraf": "^3.0.2",
    "semver": "^7.2.1",
    "voca": "1.4.0",
    "ws": "7.0.1",
    "yeoman-generator": "4.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.spec.js?(x)"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ],
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "scripts": {
    "build:clean": "rimraf generators/",
    "build:copy": "copyfiles --up 1 --all --exclude \"**/__tests__/**/*\" --exclude \"**/*.ts\" \"src/**/*\" generators",
    "build:typescript": "tsc --build tsconfig.json",
    "build": "npm run build:clean && npm run build:copy && npm run build:typescript",
    "commitlint-travis": "commitlint-travis",
    "lint": "eslint src/",
    "test": "jest",
    "prepublish": "npm run lint && npm run test && npm run build"
  },
  "repository": "liferay/generator-liferay-fragments",
  "license": "MIT"
}
