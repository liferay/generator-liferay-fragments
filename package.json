{
  "name": "generator-liferay-fragments",
  "version": "1.3.0",
  "description": "Yeoman generator for creating and maintaining Liferay Fragment projects",
  "homepage": "https://www.npmjs.com/package/generator-liferay-fragments",
  "author": {
    "name": "Pablo Molina",
    "email": "pablo.molina@liferay.com"
  },
  "files": [
    "generators",
    "utils"
  ],
  "main": "generators/index.js",
  "keywords": [
    "liferay",
    "yeoman-generator"
  ],
  "devDependencies": {
    "@types/express": "4.17.0",
    "@types/glob": "7.1.1",
    "@types/jest": "24.0.15",
    "@types/jszip": "3.1.6",
    "@types/mkdirp": "0.5.1",
    "@types/node": "8.10.49",
    "@types/request": "2.48.1",
    "@types/tmp": "0.1.0",
    "@types/voca": "1.4.0",
    "@types/ws": "6.0.1",
    "eslint": "5.16.0",
    "eslint-config-prettier": "5.0.0",
    "eslint-config-xo": "0.26.0",
    "eslint-plugin-prettier": "3.1.0",
    "husky": "2.4.1",
    "jest": "24.8.0",
    "lint-staged": "8.2.1",
    "prettier": "1.18.2",
    "tmp": "0.1.0",
    "typescript": "3.5.2",
    "yeoman-assert": "3.1.1",
    "yeoman-test": "2.0.0"
  },
  "engines": {
    "node": ">= 8.0.0",
    "npm": ">= 6.0.0"
  },
  "dependencies": {
    "chalk": "2.4.2",
    "chokidar": "3.0.1",
    "express": "4.17.1",
    "glob": "7.1.1",
    "jszip": "3.1.5",
    "mkdirp": "0.5.1",
    "request": "2.88.0",
    "voca": "1.4.0",
    "ws": "7.0.1",
    "yeoman-generator": "4.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.spec.js?(x)"
    ]
  },
  "lint-staged": {
    "*.js": [
      "npm run test -- --passWithNoTests --onlyChanged",
      "npm run typecheck --",
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "precommit": "lint-staged",
    "format:all": "eslint --quiet --fix $(git ls-files | grep \"\\.\\(js\\)$\") && prettier --loglevel error --write $(git ls-files | grep -v \"\\.\\(js\\)$\")",
    "typecheck": "tsc --allowJs true --checkJs true --esModuleInterop true --module esnext --moduleResolution node --noEmit true --pretty true --resolveJsonModule true --strict true --target esnext types/*",
    "typecheck:all": "npm run typecheck -- $(git ls-files | grep \"\\.\\(js\\)$\")",
    "lint": "eslint ./generators/ ./utils/",
    "test": "jest",
    "preversion": "git checkout -b new-version && npm run typecheck:all && npm run lint",
    "postversion": "git push && git push --tags && git checkout master && git branch -D new-version"
  },
  "repository": "p2kmgcl/generator-liferay-fragments",
  "license": "MIT"
}
