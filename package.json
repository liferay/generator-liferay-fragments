{
  "name": "generator-liferay-fragments",
  "version": "1.8.1",
  "description": "Yeoman generator for creating and maintaining Liferay Fragment projects",
  "homepage": "https://www.npmjs.com/package/generator-liferay-fragments",
  "author": {
    "name": "Pablo Molina",
    "email": "pablo.molina@liferay.com"
  },
  "main": "generators/cli.js",
  "files": [
    "generators"
  ],
  "keywords": [
    "liferay",
    "yeoman-generator"
  ],
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-angular": "^11.0.0",
    "@types/express": "4.17.1",
    "@types/glob": "7.1.1",
    "@types/jest": "24.0.15",
    "@types/jszip": "3.1.6",
    "@types/mime-types": "^2.1.0",
    "@types/ncp": "^2.0.4",
    "@types/node": "^10.0.0",
    "@types/rimraf": "^3.0.0",
    "@types/voca": "1.4.0",
    "@types/ws": "6.0.1",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "copyfiles": "^2.3.0",
    "eslint": "^6.0.0",
    "eslint-config-liferay": "^21.1.0",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "8.2.1",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.0",
    "typescript": "^4.0.3",
    "yeoman-assert": "3.1.1",
    "yeoman-test": "^2.7.0"
  },
  "engines": {
    "node": ">= 10.0.0",
    "yarn": "^1.22.5"
  },
  "dependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@liferay/npm-bundler": "3.0.1-pre.1",
    "@types/node-fetch": "^2.5.7",
    "babel-loader": "^8.1.0",
    "chalk": "2.4.2",
    "chokidar": "3.0.1",
    "execa": "^4.0.3",
    "express": "4.17.1",
    "form-data": "3.0.0",
    "glob": "7.1.1",
    "jszip": "3.1.5",
    "mime-types": "2.1.26",
    "ncp": "^2.0.0",
    "node-fetch": "^2.6.1",
    "rimraf": "^3.0.2",
    "voca": "1.4.0",
    "ws": "7.0.1",
    "yeoman-generator": "4.12.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.spec.js?(x)"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.ts": [
      "eslint --fix",
      "git add"
    ],
    "*": [
      "prettier --ignore-unknown --write",
      "git add"
    ]
  },
  "scripts": {
    "build:clean": "rimraf generators/",
    "build:copy": "copyfiles --up 1 --all --exclude \"**/__tests__/**/*\" --exclude \"**/*.ts\" \"src/**/*\" generators",
    "build:typescript": "tsc --build tsconfig.json",
    "build": "yarn run build:clean && yarn run build:copy && yarn run build:typescript",
    "lint": "eslint src/ && prettier --ignore-unknown --list-different --ignore-path .gitignore .",
    "test": "yarn run build && jest",
    "prepack": "yarn run build"
  },
  "repository": "liferay/generator-liferay-fragments",
  "license": "MIT"
}
