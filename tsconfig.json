{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "lib": ["DOM", "ES2018"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "generators",
    "sourceMap": true,
    "strict": true,
    "target": "ES2018"
  },
  "compileOnSave": true,
  "include": ["src", "types"],
  "exclude": ["node_modules", "src/**/templates/**", "**/__tests__/**"]
}
